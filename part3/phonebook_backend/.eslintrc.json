{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "eqeqeq": "error",
        "no-unused-vars": "warn",
        "no-console": "off",
        "indent": [
            "error",
            2
        ]
    },
    "ignorePatterns": [
        "dist/",
        "build/",
        "node_modules/"
    ]
}